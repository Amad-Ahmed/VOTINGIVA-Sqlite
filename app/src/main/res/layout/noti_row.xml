<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/UserVoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/oswaldbold"
            android:text="User"
            android:textColor="#292929"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/prof"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PollVoted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/robotomedium"
            android:text="Poll"
            android:textColor="#292929"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/UserVoted"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintTop_toTopOf="@+id/UserVoted" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/robotomedium"
            android:text="Voted On"
            android:textColor="@color/primary_two"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/UserVoted"
            app:layout_constraintStart_toEndOf="@+id/UserVoted"
            app:layout_constraintTop_toTopOf="@+id/UserVoted" />

        <ImageView
            android:id="@+id/prof"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="-20dp"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/ic_avatar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
